{
  "manifest_version": 2,

  "name": "Mirror Writer",
  "description": "This extension shows a mirror so that you can reflect on yourself while you write.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": true
  }
}
